<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/backland">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="logo42"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btnView"
            android:layout_width="630dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:elevation="10dp"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:text="All Contacts"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="53dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:autofillHints="add"
            android:contentDescription="add"
            android:src="@drawable/add"
            app:tint="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/card_items_contacts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/tape"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:elevation="10dp">
        <ImageButton
            android:id="@+id/btnSet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="60dp"
            android:background="@null"
            android:autofillHints="settings"
            android:contentDescription="settings"
            android:layout_gravity="center_vertical"
            android:src="@drawable/settings"
            app:tint="@color/blue" />

        <ImageButton
            android:id="@+id/btnConv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="560dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:autofillHints="sms"
            android:contentDescription="sms"
            android:src="@drawable/mailbox"
            app:tint="@color/blue" />
    </LinearLayout>

</LinearLayout>
